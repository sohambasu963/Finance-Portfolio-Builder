{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "dist",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "checkJs": false,
      "noEmit": true,
      "jsx": "react"
    },
    "include": ["src/**/*.ts", "!src/**/*test.ts"],
    "exclude": ["node_modules"]
  }
  